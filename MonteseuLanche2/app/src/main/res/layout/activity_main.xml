<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#060606">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageView"
        android:background="@drawable/lanche"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bt_cardapio"
        android:id="@+id/tvCardapio"
        android:layout_marginTop="38dp"
        android:textColor="#ffffff"
        android:onClick="Cardapio"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/tvMontar"
        android:layout_alignStart="@+id/tvMontar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bt_montar"
        android:id="@+id/tvMontar"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:onClick="Montar"
        android:layout_below="@+id/tvCardapio"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bt_localizar"
        android:id="@+id/tvLocalizar"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:onClick="Localizar"
        android:layout_below="@+id/tvMontar"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView2"
        android:background="@drawable/chheff"
        android:layout_alignBottom="@+id/tvMontar"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView3"
        android:background="@drawable/local"
        android:layout_alignBottom="@+id/tvLocalizar"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView4"
        android:background="@drawable/prato"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/tvMontar"
        android:layout_toLeftOf="@+id/tvCardapio"
        android:layout_toStartOf="@+id/tvCardapio" />
</RelativeLayout>
